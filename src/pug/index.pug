doctype html
html(lang="en")
  body
    if (!user)
      form(action="/login", method="post")
        div
          label Username:
          input(type="text", name="username")
        div
          label Password:
          input(type="text", name="password")
        div
          input(type="submit", value="Log In")
    else
      H1 login with #{user.username}
      a(href='/logout') logout
